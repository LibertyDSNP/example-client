{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "antd": "^4.13.1",
    "camelcase": "^6.2.0",
    "css-loader": "5.1.2",
    "file-loader": "6.2.0",
    "fs-extra": "^9.1.0",
    "mini-css-extract-plugin": "1.3.9",
    "node-sass-chokidar": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-loader": "4.2.0",
    "postcss-normalize": "9.0.0",
    "postcss-preset-env": "6.7.0",
    "postcss-safe-parser": "5.0.2",
    "react": "^16.14.0",
    "react-app-polyfill": "^2.0.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0",
    "resolve": "1.20.0",
    "resolve-url-loader": "3.1.2",
    "sass-loader": "10.1.1",
    "serve": "^11.3.2",
    "shelljs": "^0.8.4",
    "style-loader": "2.0.0",
    "ts-jest": "^26.5.4",
    "ts-pnp": "1.2.0",
    "typescript": "^4.2.3",
    "url-loader": "4.1.1",
    "web3": "^1.3.4",
    "web3-core": "^1.3.4",
    "web3-utils": "^1.3.4",
    "webpack": "^4.42.0"
  },
  "scripts": {
    "prestart": "node bin/pre-start",
    "start": "node scripts/start.js",
    "watch": "node scripts/start.js",
    "build": "node scripts/build.js",
    "lint": "npm-run-all -c lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:stylelint": "stylelint src/**/*.scss",
    "format": "npm run lint:eslint -- --fix && npm run lint:stylelint -- --fix ",
    "test": "jest",
    "test:coverage": "node scripts/test.js --env=jsdom --coverage",
    "docker:build": "docker build -t liberty-exp-client . && docker container create -p 3000:3000 --name liberty-exp-client liberty-exp-client:latest",
    "docker:start": "docker container start liberty-exp-client",
    "docker:stop": "docker container stop liberty-exp-client",
    "docker:rm": "(npm run docker:stop || true) && docker container rm liberty-exp-client",
    "docker:reset": "(npm run docker:rm || true) && npm run docker:build && npm run docker:start"
  },
  "engines": {
    "node": ">=14.5.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/serviceWorker.js"
    ],
    "setupFiles": [
      "jest-canvas-mock",
      "react-app-polyfill/jsdom",
      "<rootDir>/config/jest/setup.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jest-environment-jsdom-fourteen",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|ts|tsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "modulePaths": [],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "reporters": [ "default", "jest-junit" ],
    "testResultsProcessor": "jest-junit"
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.13.10",
    "@svgr/webpack": "5.5.0",
    "@testing-library/react-hooks": "^5.1.0",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.20",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.2",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-test-renderer": "17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "8.2.2",
    "babel-plugin-import": "^1.13.3",
    "babel-plugin-named-asset-import": "^0.3.7",
    "babel-preset-react-app": "^10.0.0",
    "case-sensitive-paths-webpack-plugin": "2.4.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.3.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "^24.2.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^2.5.2",
    "html-webpack-plugin": "4.5.1",
    "jest": "26.6.3",
    "jest-canvas-mock": "^2.3.1",
    "jest-environment-jsdom-fourteen": "1.0.1",
    "jest-enzyme": "^7.1.2",
    "jest-fetch-mock": "^3.0.3",
    "jest-junit": "^12.0.0",
    "jest-resolve": "26.6.2",
    "jest-watch-typeahead": "0.6.1",
    "less-loader": "^6.2.0",
    "optimize-css-assets-webpack-plugin": "5.0.4",
    "pnp-webpack-plugin": "1.6.4",
    "prettier": "2.2.1",
    "react-dev-utils": "^11.0.4",
    "react-test-renderer": "17.0.1",
    "stylelint": "^13.12.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-scss": "^3.19.0",
    "terser-webpack-plugin": "^2.3.5",
    "webpack-dev-server": "^3.11.2",
    "webpack-manifest-plugin": "3.0.0",
    "workbox-webpack-plugin": "6.1.1"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
